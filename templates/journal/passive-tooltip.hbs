<section class="content">
    <section class="header">
        <h1>{{ label }}</h1>
    </section>
    <section class="party">
        {{#each party}}
        <div class="member">
            <img src="{{ img }}">
            <span class="name">{{ name }}</span>
            <span class="passive">{{ passive }}</span>
            <span class="status {{status}}"></span>
        </div>
        {{/each}}
    </section>
</section>
